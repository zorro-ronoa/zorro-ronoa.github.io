             data-desc="Chaufa más tallarín saltado con pollo.">
            Combinado de Pollo
            <span>S/ 22.00</span>
        </div>

        <div class="menu-item" data-cat="sopas"
             data-img="sopa-wantan.jpg"
             data-name="Sopa Wantán"
             data-price="S/ 15.00"
             data-desc="Caldo tradicional con wantanes y verduras.">
            Sopa Wantán
            <span>S/ 15.00</span>
        </div>

    </div>

    <!-- Preview -->
    <div class="preview" id="preview">
        <img id="img">
        <div class="info">
            <h2 id="name"></h2>
            <div class="price" id="price"></div>
            <div class="desc" id="desc"></div>
        </div>
        <button class="back-btn" onclick="volver()">⬅ Volver al menú</button>
    </div>

</div>

<script>
const items = document.querySelectorAll('.menu-item');
const preview = document.getElementById('preview');
const img = document.getElementById('img');
const name = document.getElementById('name');
const price = document.getElementById('price');
const desc = document.getElementById('desc');
const menu = document.getElementById('menu');

items.forEach(item => {
    item.onclick = () => {
        img.src = item.dataset.img;
        name.textContent = item.dataset.name;
        price.textContent = item.dataset.price;
        desc.textContent = item.dataset.desc;

        menu.style.display = "none";
        preview.classList.add('show');
    }
});

function volver() {
    preview.classList.remove('show');
    menu.style.display = "grid";
}

document.querySelectorAll('.category').forEach(cat => {
    cat.onclick = () => {
        document.querySelectorAll('.category').forEach(c => c.classList.remove('active'));
        cat.classList.add('active');

        const tipo = cat.dataset.cat;
        items.forEach(item => {
            item.style.display = (tipo === 'todos' || item.dataset.cat === tipo) ? 'block' : 'none';
        });
    }
});
</script>

